# =============================================================================
# PROFESSIONAL CRM/ERP FOR GLOBAL TRADE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
FLASK_APP=crm_app.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Development)
DATABASE_URL=sqlite:///trade_crm.db

# PostgreSQL (Production - Recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/trade_crm

# MySQL (Alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/trade_crm

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# Groq API for form filling and HS code classification
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI (Optional alternative)
# OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# VECTOR DATABASE (ChromaDB)
# =============================================================================
CHROMA_PERSIST_DIR=./chroma_db
HTS_JSON_PATH=hts_current.json

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24
PASSWORD_MIN_LENGTH=8

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=TradePro CRM

# SendGrid (Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun (Alternative)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-domain.com

# =============================================================================
# PAYMENT INTEGRATIONS
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com  # Use https://api-m.paypal.com for production

# =============================================================================
# SHIPPING CARRIER INTEGRATIONS
# =============================================================================
# FedEx
FEDEX_API_KEY=your_fedex_api_key
FEDEX_SECRET_KEY=your_fedex_secret_key
FEDEX_ACCOUNT_NUMBER=your_fedex_account_number
FEDEX_METER_NUMBER=your_fedex_meter_number

# UPS
UPS_API_KEY=your_ups_api_key
UPS_CLIENT_ID=your_ups_client_id
UPS_CLIENT_SECRET=your_ups_client_secret
UPS_ACCOUNT_NUMBER=your_ups_account_number

# DHL
DHL_API_KEY=your_dhl_api_key
DHL_API_SECRET=your_dhl_api_secret
DHL_ACCOUNT_NUMBER=your_dhl_account_number

# =============================================================================
# CUSTOMS & TRADE COMPLIANCE
# =============================================================================
# Avalara (Customs duty calculation)
AVALARA_API_KEY=your_avalara_api_key
AVALARA_ACCOUNT_NUMBER=your_avalara_account

# Zonos (Landed cost calculation)
ZONOS_API_KEY=your_zonos_api_key

# =============================================================================
# ACCOUNTING INTEGRATIONS
# =============================================================================
# QuickBooks
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
QUICKBOOKS_REDIRECT_URI=http://localhost:5000/quickbooks/callback

# Xero
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret

# =============================================================================
# EXCHANGE RATE SERVICES
# =============================================================================
# Free services
EXCHANGE_RATE_API_KEY=your_exchangerate_api_key  # exchangerate-api.com

# Or use forex-python (no API key needed)
USE_FOREX_PYTHON=True

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local storage
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=16777216  # 16MB in bytes

# AWS S3 (Optional for production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1

# =============================================================================
# REDIS (For caching and background jobs)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry (Error tracking)
# SENTRY_DSN=your_sentry_dsn

# Log level
LOG_LEVEL=INFO

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_FEATURES=True
ENABLE_PAYMENT_PROCESSING=True
ENABLE_SHIPPING_INTEGRATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=True

# =============================================================================
# BUSINESS SETTINGS
# =============================================================================
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC
COMPANY_NAME=TradePro Global
COMPANY_ADDRESS=123 Trade Street, Business City, USA
COMPANY_PHONE=+1-555-0100
COMPANY_EMAIL=info@tradepro.com
COMPANY_WEBSITE=https://tradepro.com

# Tax rates by region (can be overridden per transaction)
TAX_RATE_US=0.08
TAX_RATE_EU=0.19
TAX_RATE_UK=0.20
TAX_RATE_ASIA=0.10

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================
# Set to False in production
FLASK_DEBUG=True
SQLALCHEMY_ECHO=False  # Set to True to see SQL queries
TESTING=False
